<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/OutText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textSize="25dp" />
            <EditText
                android:id="@+id/InText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="center|right"
                android:textSize="30dp" />
            <Button
                android:id="@+id/but5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="C"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="1"/>
            <Button
                android:id="@+id/num2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="2"/>

            <Button
                android:id="@+id/num3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="3" />
            <Button
                android:id="@+id/but1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="*"/>

            <Button
                android:id="@+id/butCos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="COS"
                android:textSize="30dp" />

            <Button
                android:id="@+id/butC1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text=")"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="4"/>
            <Button
                android:id="@+id/num5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="5"/>
            <Button
                android:id="@+id/num6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="6"/>
            <Button
                android:id="@+id/but2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="/"/>
            <Button
                android:id="@+id/butSin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="SIN"/>
            <Button
                android:id="@+id/butC2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="("/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/num7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="7"/>
            <Button
                android:id="@+id/num8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="8"/>
            <Button
                android:id="@+id/num9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="9"/>
            <Button
                android:id="@+id/but3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="-"/>
            <Button
                android:id="@+id/butTg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="TAN"/>
            <Button
                android:id="@+id/butKor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="âˆš"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="."/>

            <Button
                android:id="@+id/num0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="0" />
            <Button
                android:id="@+id/res"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="="/>
            <Button
                android:id="@+id/but4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="30dp"
                android:text="+"/>
            <Button
                android:id="@+id/butCtg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="CTG"/>
            <Button
                android:id="@+id/butX"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="30dp"
                android:layout_weight="1"
                android:text="^"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

